group {
	name: "/patchmatrix/list/port";

	parts {
		part {
			name: "link";
			type: IMAGE;
			mouse_events: 1;
			description {
				state: "default" 0.0;
				fixed: 1 1;
				align: 0.0 0.5;
				aspect: 1.0 1.0;
				rel1.relative: 0 0;
				rel2.relative: 0 1;
				min: 16 16;
				image.normal: "link_off.png";
			}
			description {
				state: "default" 1.0;
				inherit: "default" 0.0;
				image.normal: "link_on.png";
				color: 255 255 255 255;
			}
		}
		part {
			name: "elm.text";
			type: TEXT;
			mouse_events: 0;
			scale: 1;
			description {
				state: "default" 0.0;
				fixed: 1 1;
				rel1.to: "link";
				rel1.relative: 1 0;
				rel1.offset: 6 0;
				rel2.to: "type";
				rel2.relative: 0 1;
				text {
					text: "";
					size: 10;
					align: 0.0 0.5;
				};
				color: 224 224 224 255;
			}
		}
		part {
			name: "type";
			type: IMAGE;
			mouse_events: 0;
			description {
				state: "default" 0.0;
				fixed: 1 1;
				align: 1.0 0.5;
				aspect: 1.0 1.0;
				rel1.relative: 1 0;
				rel2.relative: 1 1;
				min: 16 16;
				image.normal: "audio.png";
				color: 255 255 255 0;
			}
			description {
				state: "default" 0.25;
				inherit: "default" 0.0;
				image.normal: "audio.png";
				color: 255 255 255 255;
			}
			description {
				state: "default" 0.5;
				inherit: "default" 0.0;
				image.normal: "midi.png";
				color: 255 255 255 255;
			}
			description {
				state: "default" 0.75;
				inherit: "default" 0.0;
				image.normal: "osc.png";
				color: 255 255 255 255;
			}
			description {
				state: "default" 1.0;
				inherit: "default" 0.0;
				image.normal: "cv.png";
				color: 255 255 255 255;
			}
		}
	}

	programs {
		program {
			signal: "link,on";
			action: STATE_SET "default" 1.0;
			target: "link";
		}
		program {
			signal: "link,off";
			action: STATE_SET "default" 0.0;
			target: "link";
		}
		program {
			signal: "mouse,down,*";
			source: "link";
			action: SIGNAL_EMIT "link,toggle" "";
		}

		program {
			signal: "type,hide";
			action: STATE_SET "default" 0.0;
			target: "type";
		}
		program {
			signal: "type,audio";
			action: STATE_SET "default" 0.25;
			target: "type";
		}
		program {
			signal: "type,midi";
			action: STATE_SET "default" 0.5;
			target: "type";
		}
		program {
			signal: "type,osc";
			action: STATE_SET "default" 0.75;
			target: "type";
		}
		program {
			signal: "type,cv";
			action: STATE_SET "default" 1.0;
			target: "type";
		}
	}
}
